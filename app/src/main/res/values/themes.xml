<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="BaseAppColorsTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="Theme.MarvelApp" parent="BaseAppColorsTheme">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>


    <style name="ActionBarTheme" parent="Theme.MarvelApp"  >
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="SplashTheme" parent="BaseAppColorsTheme">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <color name="general_text_color">#171616</color>

    <style name="ExpandedAppBarText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/general_text_color</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/graphic_semibold</item>

    </style>

    <style name="CollapsedAppBarText" parent="ExpandedAppBarText">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="CollapsingToolbar" parent="android:Widget">
        <item name="expandedTitleMargin">32dp</item>
        <item name="expandedTitleGravity">left</item>
        <item name="collapsedTitleGravity">center_horizontal</item>
        <item name="expandedTitleTextAppearance">@style/ExpandedAppBarText</item>
        <item name="collapsedTitleTextAppearance">@style/CollapsedAppBarText</item>
        <item name="statusBarScrim">?attr/colorPrimaryDark</item>
    </style>

    <style name="Title1" parent="@android:style/TextAppearance">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/graphic_semibold</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="H2" parent="Title1">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="GeneralText" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/general_text_color</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>


    <style name="CollapsingToolbarLayoutExpandedTextStyle" parent="ActionBarTheme">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">0sp</item>
    </style>
</resources>